<div class="section">
    <div class="container">
        <div class="row">
            <div style="text-align: right;">
            <a href="/admin/add-product" class="btn btn-success ml-auto">Add product</a>
            </div>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Title</th>
                    <th scope="col">catagory</th>
                    <th scope="col">description</th>
                    <th scope="col">image</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">1</th>
                    <td>{{this.name}}</td>
                    <td>{{this.catagorry}}</td>
                    <td>{{this.description}}</td>
                    <td><img style="height: 50px; width: 50px;" src="{{this.image}}" alt=""></td>
                </tr>
                {{/each}}

            </tbody>
        </table>
    </div>
</div>